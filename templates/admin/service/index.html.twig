{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			{% include "_partials/_adminnav.html.twig" %}
			<main class="col-9 border border-light bg-white p-2">
				<h1>Liste des services</h1>
				<table class="table-hover table align-middle table-striped table-hover">
					<thead>
						<tr>
							<th>ID</th>
							<th>Service</th>
						</tr>
					</thead>
					<tbody>
						{% for service in services %}
							<tr>
								<td>{{ service.id }}</td>
								<td>{{ service.title }}</td>
								<td>
									<button class="btn btn-success">
										<a href="{{ path('gestion_service_edit',{id: service.id})}}">Modifier</a>
									</button>
								</td>
								<td>
									<button class="btn btn-danger">
										<a href="{{ path('gestion_service_delete',{id: service.id})}}">Supprimer</a>
									</button>
								</td>
								<td></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</main>
		</div>
	</div>
</div></div>{% endblock %}
